[colors]
background = #c0282828
background-alt = ${self.background}
foreground = #ebdbb2
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #cc241d
underline = ${self.foreground}
underline-alt = #7c6f64

[bar/macbook]
width = 100%
height = 27
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = ${colors.underline}

border-size = 0
border-color = #00000000

padding-left = 2
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = fixed:pixelsize=10;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=10;1
font-3 = "Noto Sans CJK JP:size=10;1"
font-4 = "Symbola:size=10;1"
font-5 = "RobotoMono Nerd Font:size=11;2:antialias=false"

modules-left = player-mpris-tail
modules-center = i3
modules-right = alsa eth currency temperature openweathermap-simple battery date

tray-position = left
tray-padding = 2
tray-background = ${colors.background}

cursor-click = pointer
cursor-scroll = ns-resize

locale = "pt_BR.UTF-8"

temperature-thermal-zone = 1

[bar/desktop]
inherit = bar/macbook
monitor = ${env:MONITOR:HDMI-0}
modules-right = alsa eth currency temperature openweathermap-simple date

temperature-thermal-zone = 3

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
label = %icon%
index-sort = true
wrapping-scroll = false

ws-icon-0 = "1: www;"
ws-icon-1 = "2: terminal;"
ws-icon-2 = "3: music;"
ws-icon-3 = "4: code;"
ws-icon-4 = "5: chat;"
ws-icon-5 = "6: notes;ﴬ"
ws-icon-7 = "7: organization;"
ws-icon-6 = "9: games;"
ws-icon-default = "缾"

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = ${self.label}
label-focused-background = ${colors.background-alt}
label-focused-underline = ${colors.underline}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = ${self.label}
label-unfocused-padding = ${self.label-focused-padding}

; visible = Active workspace on unfocused monitor
label-visible = ${self.label}
label-visible-underline = ${colors.underline-alt}
label-visible-background = ${self.label-focused-background}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = ${self.label}
label-urgent-background = ${colors.alert}
label-urgent-padding = ${self.label-focused-padding}

[module/battery]
type = internal/battery

time-format = %H:%M

label-discharging = "%percentage%% %time%" 
label-charging = "    %percentage%%" 

format-discharging = <ramp-capacity> <label-discharging>

ramp-capacity-0 = "  "
ramp-capacity-1 = "  "
ramp-capacity-2 = "  "
ramp-capacity-3 = "  "
ramp-capacity-4 = "  "

[module/eth]
type = internal/network
interface = enp6s0
interval = 3.0

format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 5

date = "%a, %d de %b"
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = 
format-background = ${colors.background-alt}
format-prefix-foreground = ${colors.foreground-alt}

label = "  %date%, %time%  "

[module/alsa]
type = internal/alsa

format-volume = "<ramp-volume> <label-volume>   "
format-volume-background = ${colors.background-alt}
label-volume = %percentage%%
label-volume-foreground = ${root.foreground}

label-muted = "  ﱝ   "
label-muted-background = ${colors.background-alt}

ramp-volume-0 = "  奄"
ramp-volume-1 = "  奔"
ramp-volume-2 = "  墳"

[module/temperature]
type = internal/temperature
thermal-zone = ${root.temperature-thermal-zone}
warn-temperature = 60

format = "<ramp> <label>  "
format-background = ${colors.background-alt}
format-warn = "<ramp> <label-warn>  "

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.secondary}

ramp-0 = "   "
ramp-1 = "   "
ramp-2 = "   "
ramp-3 = "   "

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = "     "
label-open-background = ${colors.background-alt}
label-close =  cancel
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[module/player-mpris-tail]
type = custom/script
exec = ~/.config/polybar/polybar-scripts/polybar-scripts/player-mpris-tail/player-mpris-tail.py
tail = true
click-left = ~/.config/polybar/polybar-scripts/polybar-scripts/player-mpris-tail/player-ctrl.sh previous
click-right = ~/.config/polybar/polybar-scripts/polybar-scripts/player-mpris-tail/player-ctrl.sh next
click-middle = ~/.config/polybar/polybar-scripts/polybar-scripts/player-mpris-tail/player-ctrl.sh play-pause

[module/openweathermap-simple]
type = custom/script
exec = ~/.config/polybar/polybar-scripts/polybar-scripts/openweathermap-simple/openweathermap-simple.sh
interval = 600
label-background = ${colors.background-alt}

[module/currency]
type = custom/script
exec = "currency-converter USD BRL"
interval = 180

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

